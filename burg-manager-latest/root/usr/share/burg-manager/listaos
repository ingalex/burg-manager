os=$(grep -i -e menuentry /boot/burg/burg.cfg | awk -F[\'\"] '{print $2}'| sed '/./!d'|wc -l)
linenum=$os
while (( linenum >="0" )) ;
do
input[$linenum]=$(grep -i -e menuentry /boot/burg/burg.cfg | awk -F[\'\"] '{print $2}'| sed '/./!d'| head -$linenum | /usr/bin/tail -1)
echo ${input[$linenum]}
i=$(($linenum-1))
linenum=$i
done
exit 0